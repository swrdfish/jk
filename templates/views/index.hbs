<div id="booking" class="bookings container">
	<h1 class="segment-header">Booking Enquiry</h1>
	<div class="row">
		<div class="col-sm-8 col-md-6">
			{{#if enquirySubmitted}}
			<h3>Thanks for getting in touch. We will get back to you soon. </h3>
			{{else}}
			<form method="post">
				<input type="hidden" name="action" value="contact">
				<div class="form-group {{#if validationErrors.name}}has-error{{/if}}">
					<input type="text" name="name.full" placeholder="Name" class="form-control" value="{{formData.[name.full]}}" required>
				</div>
				<div class="form-group {{#if validationErrors.email}}has-error{{/if}}">
					<input type="email" name="email" placeholder="Email" class="form-control" value="{{formData.email}}"  required>
				</div>
				<div class="form-group">
					<input type="text" name="phone" placeholder="Phone Number" class="form-control" value="{{formData.phone}}"  required>
				</div>
				<div class="form-group {{#if validationErrors.enquiryType}}has-error{{/if}}">
					<select name="enquiryType" class="form-control">
						<option value="">(how can we help you?)</option>
						{{#each enquiryTypes}}
						<option value="{{value}}">{{label}}</option>
						{{/each}}
					</select>
				</div>
				<div class="form-group {{#if validationErrors.message}}has-error{{/if}} ">
					<textarea name="message" placeholder="Leave us a message..." rows="4" class="form-control">{{formData.message}}</textarea>
				</div>
				<div class="form-actions">
					<button type="submit" class="btn btn-primary">Send</button>
				</div>
			</form>
			{{/if}}
		</div>
		<div class="col-md-6" style="padding: 0 60px;">
			<span style="vertical-align: middle; font-size:1.3em">
				<h3>Note: </h3>
				For final bookings you need to come down to our office located at: <br/><br/>
				<span style="font-weight: bold">
				JHINUK CONSTRUCTIONS, <br/>
				SuperMarket, Block B <br/>
				Bolpur, Birbhum <br/>
				PIN: 731204 <br/>
				Phone: 03463-252512 <br/>
				<span>
			</span>
		</div>
	</div>
</div>
